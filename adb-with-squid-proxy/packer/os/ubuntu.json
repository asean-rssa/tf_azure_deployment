{
    "variables": {
        "subsid": "",
        "release": "2.0"
    },
    "builders": [
        {
            "type": "azure-arm",
            "subscription_id": "{{user `subsid`}}",
            "managed_image_resource_group_name": "hwang-adb-kr",
            "managed_image_name": "hwang-squid-image-{{user `release`}}",
            "os_type": "Linux",
            "image_publisher": "Canonical",
            "image_offer": "UbuntuServer",
            "image_sku": "16.04-LTS",
            "azure_tags": {
                "dept": "Engineering",
                "task": "Image deployment"
            },
            "location": "Southeast Asia",
            "vm_size": "Standard_DS2_v2"
        }
    ],
    "provisioners": [
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "apt-get update",
                "apt-get upgrade -y",
                "apt-get -y install nginx",
                "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
            ],
            "inline_shebang": "/bin/sh -x",
            "type": "shell"
        }
    ]
}